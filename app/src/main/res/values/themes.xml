<resources
    xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Theme.AmbapharmApp" parent="Theme.Material3.Light.NoActionBar" />
    <style name="Widget.App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
    </style>
    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="colorSecondary">@color/violet</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>
    <!--GuidLines Component-->
    <style name="verticalL">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="layout_constraintGuide_percent">0.11</item>

    </style>
    <style name="verticalR">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="layout_constraintGuide_percent">0.89</item>
    </style>

    <style name="horizontalT">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="layout_constraintGuide_percent">0.16</item>
    </style>

    <!--Button Component-->
    <style name="Button">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_marginTop">@dimen/_30sdp</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="cornerRadius">@dimen/dp_7</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">@id/verticalR</item>
        <item name="layout_constraintStart_toStartOf">@id/verticalL</item>
        <item name="layout_constraintVertical_bias">0.0</item>
    </style>

    <!--Card Component-->
    <style name="Card">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">@dimen/_100sdp</item>
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="cardCornerRadius">@dimen/_8sdp</item>
        <item name="cardElevation">@dimen/_5sdp</item>
        <item name="layout_constraintEnd_toStartOf">@+id/verticalR</item>
        <item name="layout_constraintStart_toStartOf">@+id/verticalL</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="Image">
        <item name="android:layout_width">@dimen/_16sdp</item>
        <item name="android:layout_height">@dimen/_18sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:layout_marginBottom">@dimen/_16sdp</item>
        <item name="android:src">@drawable/ic_arrow_r</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <!--Add Title Component-->

    <style name="TitleConstraintLayout">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintEnd_toStartOf">@+id/verticalR</item>
        <item name="layout_constraintStart_toStartOf">@+id/verticalL</item>
        <item name="layout_constraintTop_toTopOf">@+id/horizontalT</item>
    </style>
    <style name="AddTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/sp_19</item>
        <item name="android:paddingBottom">@dimen/dp_15</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>
    <style name="ColoredTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ThemeMaterialCalandar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:windowFullscreen">false</item>
    </style>
</resources>