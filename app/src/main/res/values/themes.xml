<resources
    xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Base.Theme.AndroidAppFNC" parent="Theme.Material3.DayNight.NoActionBar">
    </style>
    <style name="Theme.AndroidAppFNC" parent="Base.Theme.AndroidAppFNC" ></style>
    <style name="Widget.App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
    </style>
    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="colorSecondary">@color/violet</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <!--GuidLines Component-->
    <style name="verticalL">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="layout_constraintGuide_percent">0.11</item>

    </style>
    <style name="verticalR">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="layout_constraintGuide_percent">0.89</item>
    </style>

    <style name="horizontalT">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="layout_constraintGuide_percent">0.23</item>
    </style>

    <!--Button Component-->
    <style name="Button">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">@dimen/dp_53</item>
        <item name="android:layout_marginTop">@dimen/dp_30</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="cornerRadius">@dimen/dp_7</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">@id/verticalR</item>
        <item name="layout_constraintStart_toStartOf">@id/verticalL</item>
        <item name="layout_constraintVertical_bias">0.0</item>
    </style>

    <!--Card Component-->
    <style name="Card">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">@dimen/dp_100</item>
        <item name="android:layout_marginLeft">@dimen/dp_5</item>
        <item name="android:layout_marginStart">@dimen/dp_5</item>
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="cardCornerRadius">@dimen/dp_8</item>
        <item name="cardElevation">@dimen/dp_5</item>
        <item name="layout_constraintEnd_toStartOf">@+id/verticalR</item>
        <item name="layout_constraintStart_toStartOf">@+id/verticalL</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="Image">
        <item name="android:layout_width">@dimen/dp_16</item>
        <item name="android:layout_height">@dimen/dp_18</item>
        <item name="android:layout_marginEnd">@dimen/dp_16</item>
        <item name="android:layout_marginBottom">@dimen/dp_16</item>
        <item name="android:src">@drawable/ic_arrow_r</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <!--Add Title Component-->

    <style name="TitleConstraintLayout">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintEnd_toStartOf">@+id/verticalR</item>
        <item name="layout_constraintStart_toStartOf">@+id/verticalL</item>
        <item name="layout_constraintTop_toTopOf">@+id/horizontalT</item>
    </style>
    <style name="AddTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/sp_26</item>
        <item name="android:paddingBottom">@dimen/dp_15</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>

    </style>
    <style name="ColoredTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#6200ea</item>
    </style>
</resources>